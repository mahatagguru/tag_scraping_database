# TAG Grading Scraper Environment Configuration
# Copy this file to .env and modify as needed

# Database Configuration
POSTGRES_USER=myuser
POSTGRES_PASSWORD=mypassword
POSTGRES_DB=mydatabase
POSTGRES_PORT=5432

# Pipeline Configuration
PIPELINE_MAX_CONCURRENCY=3
PIPELINE_DELAY=1.0
# Use 'discover' to automatically find all available categories
# Or specify specific categories: Baseball,Hockey,Basketball,Football,Soccer,Golf,Racing,Wrestling,Gaming,Non-Sport
PIPELINE_CATEGORIES=discover

# Scheduling Configuration
# CRON format: minute hour day month weekday
# Examples:
#   "0 2 * * 0"     = Sundays at 2:00 AM (default)
#   "0 3 * * 1"     = Mondays at 3:00 AM
#   "0 */6 * * *"   = Every 6 hours
#   "0 2 1 * *"     = 1st of every month at 2:00 AM
#   "disabled"       = No scheduling (run once on startup only)
PIPELINE_SCHEDULE=0 2 * * 0
PIPELINE_TIMEZONE=UTC

# Logging Configuration
LOG_LEVEL=INFO
# Options: DEBUG, INFO, WARNING, ERROR

# Health Check Configuration
HEALTH_CHECK_INTERVAL=300
# Health check interval in seconds (default: 5 minutes)
